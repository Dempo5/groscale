{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/index.ts", "src/routes/leads.ts"],
  "exclude": [
    "src/routes/auth.ts",
    "src/routes/sms.ts",
    "src/middleware/**",
    "src/db/**",
    "prisma/**"
  ]
}
